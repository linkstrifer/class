*
	box-sizing border-box

a
	color #FF5039
	
body
	background-color #f5f5f5
	color #333
	font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
	font-size 21px
	font-weight 200
	line-height 38px
	padding 2em
	padding-bottom 500px

p
	font-weight 300
	line-height 1.7em
	margin auto
	width 90%

	&.detail
		font-size 14px
		margin-top 10px

	&.quote
		background-color rgba(0,0,0,.05)
		border 1px solid #ccc
		border-radius 10px
		padding 1em 1em 2em 1em
			
		a
			float right
			margin-right 2em

			&:before
				content "â€”"

section
	margin 3em auto 3em auto
	padding 1em 2em 3em 2em
	text-align center
	transition all .5s ease-in-out
	opacity 0
	position relative
	width 80%

	&.content
		background-color #fff
		border 1px solid #ddd
		border-radius 10px

		&:before
			background-color #33A7E4
			border-radius 50%
			box-sizing inherit
			color #fff
			content attr(data-step)
			height 60px
			font-size 30px
			left -20px
			padding-top 12px
			position absolute
			top -20px
			width 60px

	&.show
		opacity 1

ul
	font-weight 300
	
	li
		display block